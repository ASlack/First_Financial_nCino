    <description>Memo approval process for short term extensions</description>
    <emailTemplate>PSO_Email_Templates/ET09_Change_Memo_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
NOT(ISBLANK(Region__c)),
ISPICKVAL(LLC_BI__Memo_Type__c, &apos;Short Term Extension&apos;),
LLC_BI__Loan__r.Cumulative_Days_of_Extensions__c &lt;= 90,
OR(
ISPICKVAL(LLC_BI__Approval_Status__c, &apos;New&apos;),
ISPICKVAL(LLC_BI__Approval_Status__c, &apos;Recalled&apos;))
)</formula>
