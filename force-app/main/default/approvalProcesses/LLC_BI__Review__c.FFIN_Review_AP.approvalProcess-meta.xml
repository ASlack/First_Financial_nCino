<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>LLC_BI__Account__c</field>
        <field>LLC_BI__Review_Type__c</field>
        <field>cm_Review_Stage__c</field>
        <field>LLC_BI__Status__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>Record submitted for approval.</description>
        <label>Step 1 - Manual</label>
        <name>Step_1_Manual</name>
    </approvalStep>
    <description>First Financial&apos;s Review Approval Process.</description>
    <emailTemplate>PSO_Email_Templates/ET68_Review_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>LLC_BI__Review__c.cm_Review_Stage__c</field>
            <operation>equals</operation>
            <value>Final Review</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Field_Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Record_Type_Update_Review_Complete</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Update_Complete</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_Complete</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Stage_Update_Final_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Stage_Update_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>FFIN Review AP</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Stage_Update_Final_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
