<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Loan_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
NOT(ISBLANK(LLC_BI__Product_Package__r.Approver_1__c))
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approver 1</label>
        <name>Approver_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Loan_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
NOT(ISBLANK(LLC_BI__Product_Package__r.Approver_2__c)),
LLC_BI__Product_Package__r.Enable_10_Rule__c = False,

OR(
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Secured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Approver_1__r.LLC_BI__Secured_Individual_Lending_Authority__c),
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Unsecured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Approver_1__r.LLC_BI__Unsecured_Individual_Lending_Authority__c),

AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Cash Secured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; 250000),

ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;3&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;4&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;5&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;6&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;7&quot;),
LLC_BI__Product_Package__r.Any_Classified_Loan_100M__c = True,
LLC_BI__Product_Package__r.Classified_Loan_Long_Term__c = True))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approver 2</label>
        <name>Approver_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Loan_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
LLC_BI__Product_Package__r.Enable_10_Rule__c = False,

OR(
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Secured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Approver_1__r.LLC_BI__Secured_Individual_Lending_Authority__c,
ISBLANK( LLC_BI__Product_Package__r.Approver_2__c)
),
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Secured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Approver_2__r.LLC_BI__Secured_Individual_Lending_Authority__c,
NOT(ISBLANK( LLC_BI__Product_Package__r.Approver_2__c))
),
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Unsecured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Approver_1__r.LLC_BI__Unsecured_Individual_Lending_Authority__c,
ISBLANK( LLC_BI__Product_Package__r.Approver_2__c)
),
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Unsecured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Approver_2__r.LLC_BI__Unsecured_Individual_Lending_Authority__c,
NOT(ISBLANK( LLC_BI__Product_Package__r.Approver_2__c))
),
AND(
ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;Cash Secured&quot;),
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; 250000
),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;3&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;4&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;5&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;6&quot;),
ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;7&quot;),
LLC_BI__Product_Package__r.Any_Classified_Loan_100M__c = True,
LLC_BI__Product_Package__r.Classified_Loan_Long_Term__c = True
))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Commercial Loan Committee</label>
        <name>Commercial_Loan_Committee</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Loan_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>OR(
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Region__r.CLC_Total_Relationship_Max_Authority__c,
LLC_BI__Product_Package__r.Any_Classified_Loan_100M__c = True,
LLC_BI__Product_Package__r.Classified_Loan_Long_Term__c = True
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Regional Directors Loan Committee</label>
        <name>Regional_Directors_Loan_Committee</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Loan_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>OR(
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Region__r.RDLC_Total_Relationship_Max_Authority__c,
LLC_BI__Product_Package__r.Classified_Loan_Long_Term__c = True
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Senior Loan Committee</label>
        <name>Senior_Loan_Committee</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Loan_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
LLC_BI__Product_Package__r.Total_Relationship_Exposure__c &gt; LLC_BI__Product_Package__r.Region__r.SLC_Total_Relationship_Max_Authority__c
)</formula>
        </entryCriteria>
        <label>FFIN Directors Loan Committee</label>
        <name>FFIN_Directors_Loan_Committee</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for Abilene Region</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
LLC_BI__Product_Package__r.Region__r.Name = &apos;Abilene&apos;,
LLC_BI__Product_Package__r.LLC_BI__Reviewable_Loan_Facilities_Count__c &gt;= 1,
LLC_BI__Is_Review_Ready__c = True,
NOT(ISBLANK(LLC_BI__Product_Package__r.Household__c)),
NOT(ISBLANK(LLC_BI__Product_Package__r.Approver_1__c)),
NOT(ISPICKVAL(LLC_BI__Product_Package__r.Package_Secure_Type__c, &quot;&quot;)),
NOT(ISPICKVAL(LLC_BI__Product_Package__r.LLC_BI__Risk_Rating__c, &quot;&quot;))
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Loan_Set_Credit_Approval_Date_to_Today</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Loan_Update_Stage_to_Processing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Is_Review_Ready_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Loan_Set_Stage_to_Final_Review</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Loan_Set_Stage_to_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>FFIN Loan - Abilene</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Loan_Set_Stage_to_Final_Review</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
